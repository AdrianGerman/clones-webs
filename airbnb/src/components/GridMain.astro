---
import GridCard from "./GridCard.astro"
---

<main>
  <section class="grid-container">
    <GridCard />
  </section>
</main>

<style>
  main {
    max-width: 100%;
    padding: 16px;
  }

  .grid-container {
    display: grid;
    grid-gap: 16px;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    width: 100%;
    max-width: 1800px;
    margin: 0 auto;
  }
</style>
